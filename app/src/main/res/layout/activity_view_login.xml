<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".Activity.ViewLogin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/tb_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="left"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idAgencia"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/textbox_border"
                android:hint="AgÃªncia"
                android:inputType="text"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="60"
            android:gravity="left"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idConta"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:background="@drawable/textbox_border"
                android:hint="Conta"
                android:inputType="text"
                android:maxLength="5"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical">


            <EditText
                android:id="@+id/idSenha"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:background="@drawable/textbox_border"
                android:hint="Senha"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="40"
            android:gravity="left"
            android:orientation="vertical">

            <Button
                android:id="@+id/idbtnLogar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonazul_border"
                android:text="ACESSAR"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>